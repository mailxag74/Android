<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="415dp"
        android:layout_height="731dp"
        app:srcCompat="@drawable/background"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="247dp"
        android:layout_height="115dp"
        android:gravity="center"
        android:text="GROW YOUR BUSINESS"
        android:textColor="#00000B"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="293dp"
        android:layout_height="68dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:lineSpacingExtra="0"
        android:singleLine="false"
        android:text="We will help you to grow your business using online server"
        android:textColor="#00000B"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="59dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#00000B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#E3C000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849" />

    <Button
        android:id="@+id/button2"
        android:layout_width="112dp"
        android:layout_height="57dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="#00000B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#E3C000"
        app:layout_constraintStart_toEndOf="@+id/button"
        tools:layout_editor_absoluteY="572dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="143dp"
        android:layout_height="38dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="HOW WE WORK?"
        android:textColor="@color/black"
        android:textColorHighlight="#F44336"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="134dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="360px"
        android:layout_height="640px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.112"
        app:srcCompat="@drawable/circle" />

</androidx.constraintlayout.widget.ConstraintLayout>